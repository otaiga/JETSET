<!DOCTYPE html>
<html>
<head>
  <title>Jetset</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->

</head>

<body>
  <div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <span class="brand">JETSETME SAMPLE APP</span>
    </div>
  </div>
</div>

  <div class="container">
    <div class="content">
      <div class="row">
         <div class="span9">
              <div class="well">

               <% unless flash[:notice].blank? %>
                <div class="alert alert-success">
                  <%= content_tag :div, flash[:notice] %>
                </div>
                <% end %>

                <% unless flash[:error].blank? %>
                  <div class="alert alert-error">
                    <%= content_tag :div, flash[:error] %>
                  </div>
                <% end %>

                <% unless flash[:alert].blank? %>
                  <div class="alert">
                    <%= content_tag :div, flash[:alert] %>
                  </div>
                <% end %>

                <%= yield %>
              </div>
          </div>
          <div class="span3">
            <div class="well sidebar-nav">
              <ul class="nav nav-list">
                <li class="home"><%= link_to "Home", root_path %></li>
                <% unless user_signed_in? %>
                  <li class="login"><%= link_to "Login", new_user_session_path  %></li>
                  <li class="signup"><%= link_to "Sign Up", new_user_registration_path  %></li>
                <% else %>
                  <li class="Account"><%= link_to "My Account", account_path  %></li>
                  <li class="logout"><%= link_to "Logout", destroy_user_session_path, :method => :delete  %></li>
                <% end %>
              </ul>
            </div><!--/.well -->
          </div><!--/span-->
      </div><!--/row-->
    </div><!--/content-->
  </div>

</body>
</html>
